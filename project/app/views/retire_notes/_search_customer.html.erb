<table
    columnClasses="center,center,center,center,center,center,center,center,center, center" 
    headerClass="center"
    rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
    border="1" class="tablaIndex display"  bgcolor="white">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Cliente</th>
            <th>Email</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
          <tr>
          	<td><%= customer.id %></td>
            <td><%= if customer.customer_type_id == 2 then customer.name else customer.company_name end %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Seleccionar', select_customer_retire_note_path(customer), remote: true, :onclick =>"$('#form_customer').dialog('close')" %></td>
          </tr>
        <% end %>
    </tbody>
   
</table>
