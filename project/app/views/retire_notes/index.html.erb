<div id="form_retire_note">
	<%=render 'retire_note'%>
</div>
<table 
	columnClasses="center,center,center,center,center,center,center,center,center,center" 
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
		<tr>
			<th>Nro</th>
			<th>Cliente</th>
			<th>Producto</th>
			<th>Cantidad</th>
			<th>Ciudad</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @retire_notes.each do |note| %>
		<tr>
			<td><%= note.number %></td>
			<td><%= if note.customer_id != nil then note.customer.company_name + " " + note.customer.last_name + " " + note.customer.name end %></td>
			<td><%= if note.product_type.id != nil then note.product_type.description end %></td>	
			<td><%= note.amount %></td>
			<td><%= if note.city_id != nil then note.city.name + "-" + note.city.department end %></td>
			<td><div><%= link_to 'Mostrar',  note %></div></td>
			<td>
				<div>
					<%= link_to image_tag('editar.gif'), edit_retire_note_path(note), remote: true %>
				</div>
			</td>
			<td>
				<div>
					<%= link_to image_tag('borrar2.gif'), note, confirm: 'Deseas eliminar la nota de retiro?', method: :delete %>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br />
<br />