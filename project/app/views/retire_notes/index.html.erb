<fieldset>
	<legend>
		Buscar Notas de Retiro
	</legend>
<table 
	columnClasses="center,center,center,center,center,center,center,center,center,center" 
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
		<tr>
			<th>Nro</th>
			<th>Cliente</th>
			<th>Producto</th>
			<th>Cantidad</th>
			<th>Ciudad</th>
			<th>Estado</th>
			<th></th>
			
		</tr>
	</thead>
	<tbody>
		<% @retire_notes.each do |note| %>
		<tr>
			<td><%= note.number %></td>
			<td><%= if note.customer_id != nil then note.customer.company_name + " " + note.customer.last_name + " " + note.customer.name end %></td>
			<td><%= if note.product_type.id != nil then note.product_type.description end %></td>	
			<td><%= note.amount %></td>
			<td><%= if note.city_id != nil then note.city.name + "-" + note.city.province.name end %></td>
			<td><%= if note.retire_note_state_id != nil then note.retire_note_state.state_name end %> </td>
			<td><div><%= link_to 'Mostrar',  note, id: 'mostrar' %></div></td>

		</tr>
		<% end %>
	</tbody>
</table>

</fieldset>
<br />
<br />
<script charset="utf-8" type="text/javascript">
  $(document).ready(function() {
    $('table[class*=tablaIndex]').dataTable({
      "bScrollCollapse" : true,
      "sPaginationType" : "full_numbers",
      "aLengthMenu" : [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>
