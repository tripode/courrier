
<div id="form_customer_company">
	<%=render 'customer_company'%>
</div>
<br />

<table
    columnClasses="center,center,center,center,center,center,center,center,center, center" 
    headerClass="center"
    rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
    border="1" class="tablaIndex display"  bgcolor="white">
    <thead>
        <tr>
            <th>Empresa</th>
            <th>Ruc</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.company_name %></td>
            <td><%= customer.ruc %></td>
            <td><%= customer.address %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Mostrar', customer %></td>
            <td>
            	<div>
            	<%= link_to image_tag('editar.gif'), edit_customer_company_path(customer), remote: true %>
            	</div>
            </td>
            <td>
            	<div>
            	<%= link_to image_tag('borrar2.gif'), customer, confirm: 'Estas seguro?', method: :delete %>
            
            	</div>
            </td>
          </tr>
        <% end %>
    </tbody>
   
</table>
<br />
<br /> 

