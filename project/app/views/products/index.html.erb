

	<div class="subtitle">
         <h4>Lista de Productos Registrados..</h4>
    </div>
                    
<table
	columnClasses="center,center,center,center,center,center,center,center,center,center"
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0"
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
	  <tr>
	    <th>Producto</th>
	    <th>Cliente</th>
	    <th>Destinatario</th>
	    <th>Ciudad</th>
	    <th>Direccion</th>
	  </tr>
	</thead>
	<tbody>
	<% @products.each do |product| %>
	  <tr>
	  	<td><%= product.product_type.description %></td>
	  	<td><%= product.retire_note.customer.company_name + " " +
	  		 product.retire_note.customer.last_name + " " + 
	  		 product.retire_note.customer.name %></td>
	  	<td><%= product.receiver.receiver_name%></td>
	  	<td><%= product.receiver.city.name %></td>
	  	<td><%= product.receiver.address%></td>
	  </tr>
	<% end %>
	</tbody>
</table>
<script charset="utf-8" type="text/javascript">
  $(document).ready(function() {
    $('table[class*=tablaIndex]').dataTable({
      "bScrollCollapse" : true,
      "sPaginationType" : "full_numbers",
      "aLengthMenu" : [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
</script>

