
<table
	columnClasses="center,center,center,center,center,center,center,center,center,center"
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0"
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
	  <tr>
	  	<th>Codigo</th>
	    <th>Producto</th>
	    <th>Estado</th>
	    <th>Cliente</th>
	    <th>Destinatario</th>
	    <th>Ciudad</th>
	    <th>Lugar</th>
	    <th>Direccion</th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	<% $products.each do |product| %>
	  <tr>
	  	<td><%= product.bar_code%></td>
	  	<td><%= product.product_type.description %></td>
	  	<td><%= product.product_state.state_name %></td>
	  	<td><%= product.retire_note.customer.company_name + " " +
	  		 product.retire_note.customer.last_name + " " + 
	  		 product.retire_note.customer.name %></td>
	  	<td><%= product.receiver.receiver_name%></td>
	  	<td><%= if !product.receiver_address_id.nil? then product.receiver_address.city.name end%></td>
	  	<td><%= if !product.receiver_address_id.nil? then product.receiver_address.label end%></td>
	  	<td><%= if !product.receiver_address_id.nil? then product.receiver_address.address end%></td>
	  	<td><%= link_to 'Mostrar', product %></td>
	  	<td>
           <div>
            	<%= if product.product_state_id.to_i == ProductState.no_enviado || product.product_state_id.to_i == ProductState.extraviado then link_to image_tag('editar.gif'), edit_product_path(product) end %>
           </div>
        </td>
	  </tr>
	<% end %>
	</tbody>
</table>
