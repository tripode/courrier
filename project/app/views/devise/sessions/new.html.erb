<div class="back">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="content">
		
		<div class="field">
	  		<%= f.label :login %><br />
	  		<%= f.text_field :login %>
	  	</div>
		
		<div class="field">
  			<%= f.label :password %><br />
  			<%= f.password_field :password %>
  		</div>
                <div style="color: red; background: gray; text-align: center;">
                  <% flash.each do |name, msg| %>
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  <% end %>
                </div>
  		<% if devise_mapping.rememberable? -%>
    		<div class="field">
    			<%= f.check_box :remember_me %> 
    			<%= f.label :remember_me %>
    		</div>
  		<% end -%>
  		
  		<div class="field">
  			<%= f.submit "Login" %>
  		</div>
  		
  		<% end %>
		
	</div>
</div>