<div class="span-24">
    <% if @messages %>
      <% @messages.each do |key, value| %>
        <div class=<%= key %> >
          <%= value %>
        </div>
      <% end %>
    <% end %>
</div>

<div id="user_form">
	<%=render 'user_form'%>
</div>
<br/>
<table
    columnClasses="center,center,center,center,center,center,center,center,center, center" 
    headerClass="center"
    rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
    border="1" class="tablaIndex display"  bgcolor="white">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Email</th>
            <th>Empleado</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% User.all.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.employee.full_name %></td>
            <td>
            	<% user.full_roles.split(" ").each do |role| %>
            	  <p class="role-description"><%= role %></p>
            	<% end %>
            </td>
            <td>
            	<div>
            		<%= link_to image_tag('borrar2.gif'), delete_user_path(user), :method => :delete %>
            	</div>
            </td>
          </tr>
        <% end %>
    </tbody>
   
</table>
<br />
