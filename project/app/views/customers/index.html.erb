<h1>Lista de Clientes</h1>
<br />
<table
    columnClasses="center,center,center,center,center,center,center,center,center,center" 
    headerClass="center"
    rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
    border="1" class="tablaIndex display"  bgcolor="white">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Empresa</th>
            <th>Ruc</th>
            <th>Direccion</th>
            <th>Nro Iden</th>
            <th>Celular</th>
            <th>Telefono</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
 
    <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.company_name %></td>
            <td><%= customer.ruc %></td>
            <td><%= customer.address %></td>
            <td><%= customer.num_identify %></td>
            <td><%= customer.mobile_number %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Ver', customer %></td>
            <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
            <td><%= link_to 'Borrar', customer, confirm: 'Estas seguro?', method: :delete %></td>
          </tr>
        <% end %>
    </tbody>
   
</table>
<br />
<br /> 

