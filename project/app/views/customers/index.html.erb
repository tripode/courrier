
<div>
	<fieldset>
		<legend>
			Registrar Cliente
		</legend>
		<%=render 'customer' %>
	</fieldset>
	
</div>
<br />

<table
    columnClasses="center,center,center,center,center,center,center,center,center,center" 
    headerClass="center"
    rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
    border="1" class="tablaIndex display"  bgcolor="white">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Empresa</th>
            <th>Ruc</th>
            <th>Direccion</th>
            <th>Nro Iden</th>
            <th>Celular</th>
            <th>Telefono</th>
            <th>Email</th>
            <th>Tipo de Cliente</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
 
    <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.company_name %></td>
            <td><%= customer.ruc %></td>
            <td><%= customer.address %></td>
            <td><%= customer.num_identify %></td>
            <td><%= customer.mobile_number %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.email %></td>
            <td><%= if customer.customer_type.type_name != nil then customer.customer_type.type_name end %></td>
            <td><%= link_to 'Mostrar', customer %></td>
            <td>
            	<div>
            	<%= link_to image_tag('editar.gif'), edit_customer_path(customer) %>
            	</div>
            </td>
            <td>
            	<dir>
            	<%= link_to image_tag('borrar2.gif'), customer, confirm: 'Estas seguro?', method: :delete %>
            	</dir>
            </td>
          </tr>
        <% end %>
    </tbody>
   
</table>
<br />
<br /> 

<%= link_to 'Nuevo Cliente', new_customer_path %>
