<table
	columnClasses="center,center,center,center,center,center,center,center,center,center"
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0"
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
	  <tr>
	  	<th>Item</th>
	  	<th>Codigo</th>
	    <th>Producto</th>
	    <th>Destinatario</th>
	    <th>Direccion</th>
	    <th>Recibido por</th>
	  	<th>Motivo No Entrega</th>
	  </tr>
	</thead>
	<tbody>
	<% @routing_sheets_details.each do |detail| %>
	  <tr>
	  	<td><%= @routing_sheets_details.index(detail) + 1 %></td>
	  	<td><%= detail.product.bar_code%></td>
	  	<td><%= detail.product.product_type.description %></td>
	  	<td><%= detail.product.receiver.receiver_name%></td>
	  	<td><%= detail.product.receiver_address.address%></td>
	  	<td><%= detail.who_received %> </td>
	  	<td><%= if detail.reason_id!=nil then detail.reason.description end %> </td>
	  </tr>
	<% end %>
	</tbody>
</table>

