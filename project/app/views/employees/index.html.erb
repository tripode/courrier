<h1>Lista de Empleados</h1>
<br />
<table 
	columnClasses="center,center,center,center,center,center,center,center,center,center" 
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0" 
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Apellido</th>
			<th>CI</th>
			<th>Celular</th>
			<th>Telefono</th>
			<th>Funcion</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.name %></td>
			<td><%= employee.last_name %></td>
			<td><%= employee.num_identity %></td>	
			<td><%= employee.mobile_number %></td>
			<td><%= employee.phone_number %></td>
			<td><%= employee.function_type_id %></td>
			<td><div><%= link_to 'Mostrar',  employee %></div></td>
			<td>
				<div class="editar">
					<%= link_to 'Editar', edit_employee_path(employee) %>
				</div>
			</td>
			<td>
				<div class="borrar">
					<%= link_to 'Borrar', employee, confirm: 'Are you sure?', method: :delete %>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br />
<br />
<%= link_to 'Nuevo Empleado', new_employee_path %> 