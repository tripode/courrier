<div class="span-24 last">
	<div class="subtitle">
            	<h4>Lista de todos los empleados</h4>
    </div>
<br />
<table
	columnClasses="center,center,center,center,center,center,center,center,center,center"
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0"
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Apellido</th>
			<th>CI</th>
			<th>Celular</th>
			<th>Telefono</th>
			<th>Funcion</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.name %></td>
			<td><%= employee.last_name %></td>
			<td><%= employee.num_identity %></td>
			<td><%= employee.mobile_number %></td>
			<td><%= employee.phone_number %></td>
			<td><%=employee.function_type.blank? ? "-" : employee.function_type.description %></td>
			<td><div><%= link_to 'Mostrar',  employee %></div></td>
			<td>
				<div>
					<%= link_to image_tag('editar.gif'), edit_employee_path(employee), remote: true, title: 'Editar' %>
				</div>
			</td>
			<td>
				<div>
					<%= link_to image_tag('borrar2.gif'), employee, confirm: 'Deseas eliminar el empleado?', method: :delete, title: 'Borrar' %>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br />
<br />

</div>

