<h1>Listing packages</h1>

<table>
  <tr>
    <th>Num code</th>
    <th>Description</th>
    <th>Package type</th>
    <th>Retire note</th>
    <th>Remitter</th>
    <th>Address</th>
    <th>Customer</th>
    <th>Fragile</th>
    <th>Package state</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.num_code %></td>
    <td><%= package.description %></td>
    <td><%= package.package_type_id %></td>
    <td><%= package.retire_note_id %></td>
    <td><%= package.remitter %></td>
    <td><%= package.address %></td>
    <td><%= package.customer_id %></td>
    <td><%= package.fragile %></td>
    <td><%= package.package_state_id %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

